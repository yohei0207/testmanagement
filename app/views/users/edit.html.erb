<%= form_tag("/users/#{@current_user.id}/update") do %>
<form>
    <%if @error_message%>
            <%=@error_message%>
    <% end %>
  <div class="form-group">
    <label for="formGroupExampleInput">新しい名前</label>
    <input type="text" class="form-control" id="formGroupExampleInput"  name= "name" value = "<%=@current_user.name%>">
  </div>
  <div class="form-group">
    <label for="formGroupExampleInput2">現在のパスワード</label>
    <input type="password" class="form-control" id="formGroupExampleInput2" name ="password">
  </div>
  <div class="form-group">
    <label for="formGroupExampleInput2">新しいパスワード</label>
    <input type="password" class="form-control" id="formGroupExampleInput2" name ="new_password">
  </div>
  <div class="form-group">
    <label for="formGroupExampleInput2">新しいパスワード(確認)</label>
    <input type="password" class="form-control" id="formGroupExampleInput2" name ="new_password_again">
  </div>
  
  <input type="submit" value="登録">
 
</form>
<% end %>


