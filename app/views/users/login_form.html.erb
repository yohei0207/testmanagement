<%= form_tag("/login") do %>
<form>
  <%if @error_message%>
    <%=@error_message%>
  <% end %>
  <div class="form-group">
    <label for="formGroupExampleInput">名前</label>
    <input type="text" class="form-control" id="formGroupExampleInput" placeholder="名前を入力してください" name= "name" value = "<%=@name%>">
  </div>
  <div class="form-group">
    <label for="formGroupExampleInput2">パスワード</label>
    <input type="password" class="form-control" id="formGroupExampleInput2" placeholder="パスワードを入力してください" name ="password" value = "<%=@password%>">
  </div>
  <input type="submit" value="ログイン">
 
</form>
<% end %>


